<h1>Signup!</h1>

<%= form_for :user, url: users_path do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset class="sign_up">
  <label for="user_first_name"> First Name: </label> <%= f.text_field :first_name  %>
  <br>
  <label for="user_last_name"> Last Name: </label> <%= f.text_field :last_name %>
  <br>
  <label for="user_email"> Email: </label> <%= f.email_field :email %>
  <br>
  <label for="user_password"> Password: </label> <%= f.password_field :password %>
  <br>
  <label for="user_password_confirmation"> Password confirmation: </label> <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit "Submit" %>
  </fieldset>

<% end %>