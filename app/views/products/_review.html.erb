<div class="row">
  <dl class="dl-horizontal">
    <dt>
      <% rev.rating.times do %>
        <i class="fa fa-star" aria-hidden="true" style="color: #f4c542;"></i>
      <% end %>
    </dt>
    <dd>  <%= rev.created_at.strftime("%Y-%m-%d") %> </dd>
    <dt> <%= User.find(rev.user_id).first_name %>: </dt>
    <dd> <%= rev.description %> </dd>
  </dl>
</div>
