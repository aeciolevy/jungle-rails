<div class="row">
  <dl class="dl-horizontal">
    <dt>
      <% rev.rating.times do %>
        <i class="fa fa-star" aria-hidden="true" style="color: #f4c542;"></i>
      <% end %>
    </dt>
    <dd>  <%= rev.created_at.strftime("%Y-%m-%d") %>
    <% if current_user == rev.user %>
    <%= link_to "", product_review_path(@product, rev),
    method: :delete,
    data: {confirm: "Are you sure?"},
    :class => "fa fa-trash"  %>
    <% end %>
    </dd>
    <dt> <%= rev.user.first_name %>: </dt>
    <dd> <%= rev.description %> </dd>
  </dl>
</div>
