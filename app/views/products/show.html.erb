<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    </div>
    <% if current_user %>
      <div class="jumbotron">
      <%= form_for @new_review, url: product_reviews_path(@product) do |f| %>
       <span> Description: </span> <%= f.text_area :description, :class => "form-control" %> <br/>
        <div class="elements"> <span> Rating: </span> <%= f.select :rating, options_for_select(1..5) %>
        <%= f.submit :class => "btn btn-primary" %> </div>
      <% end %>
      <% end %>
      </div>
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Product Reviews</h3>
        </div>
        <div class="panel-body">
          <% @reviews.each do |rev| %>
          <%= render 'review', rev: rev %>
        </div>
    <% end %>
    </div>

  </article>

</section>
